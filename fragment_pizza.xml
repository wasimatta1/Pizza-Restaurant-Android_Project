<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="250dp"
    android:layout_margin="12dp"
    android:background="@drawable/firstcard"
    android:clipToPadding="false"
    android:elevation="6dp"
    android:padding="6dp"
    app:layoutDescription="@xml/fragment_pizza_scene"
    tools:context=".fragment.PizzaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_call"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_bg"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/Pizzaimage"
            android:layout_width="157dp"
            android:layout_height="218dp"
            android:src="@drawable/img_6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/pizzaName"
            android:layout_width="223dp"
            android:layout_height="42dp"
            android:text="pizza Name"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.896" />

        <ImageButton
            android:id="@+id/FavButton"
            android:layout_width="22dp"
            android:layout_height="27dp"
            android:background="#FFFDFD"
            android:src="@drawable/animfav"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.827"
            app:layout_constraintStart_toEndOf="@+id/orderButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.026" />

        <ImageButton
            android:id="@+id/orderButton"
            android:layout_width="27dp"
            android:layout_height="26dp"
            android:background="#FFFFFF"
            android:src="@drawable/add_shopping"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.122"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.026" />

        <ImageView
            android:id="@+id/imageDiscount"
            android:layout_width="170dp"
            android:layout_height="44dp"
            android:src="@drawable/discount"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Use a drawable for background to add corner radius -->


</androidx.constraintlayout.widget.ConstraintLayout>
